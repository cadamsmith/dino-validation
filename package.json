{
  "name": "dino-validation",
  "version": "1.0.0",
  "description": "Lightweight clientside form validation in vanilla JS",
  "homepage": "https://github.com/cadamsmith/dino-validation",
  "bugs": {
    "url": "https://github.com/cadamsmith/dino-validation/issues"
  },
  "author": "Adam Smith <cadamsmith.dev@gmail.com> (https://cadamsmith.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cadamsmith/dino-validation.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/dv.umd.js",
  "module": "dist/dv.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/dv.esm.js",
      "require": "./dist/dv.umd.js",
      "types": "./dist/types/index.d.ts",
      "default": "./dist/dv.esm.js"
    },
    "./auto": {
      "import": "./dist/dv-auto.esm.js",
      "require": "./dist/dv-auto.umd.js",
      "types": "./dist/types/auto/index.d.ts",
      "default": "./dist/dv-auto.esm.js"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.0",
    "http-server": "^14.1.1",
    "prettier": "^3.6.2",
    "rollup": "^4.53.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "ci": "npm run build && npm run check-format && npm run test",
    "build": "npm run type-check && rollup -c",
    "test": "npm run type-check-tests && npx playwright test",
    "test:firefox": "npm run type-check-tests && npx playwright test --project=firefox",
    "test:chrome": "npm run type-check-tests && npx playwright test --project=chrome",
    "test:webkit": "npm run type-check-tests && npx playwright test --project=webkit",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check-tests": "tsc --noEmit -p tests/tsconfig.json"
  }
}
