{
  "name": "dino-validation",
  "version": "1.0.0",
  "description": "Lightweight clientside form validation in vanilla JS",
  "homepage": "https://github.com/cadamsmith/dino-validation",
  "bugs": {
    "url": "https://github.com/cadamsmith/dino-validation/issues"
  },
  "author": "Adam Smith <cadamsmith.dev@gmail.com> (https://cadamsmith.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cadamsmith/dino-validation.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/js/dv.umd.js",
  "module": "dist/js/dv.esm.js",
  "exports": {
    ".": {
      "import": "./dist/js/dv.esm.js",
      "require": "./dist/js/dv.umd.js",
      "default": "./dist/js/dv.esm.js"
    },
    "./auto": {
      "import": "./dist/js/dv-auto.esm.js",
      "require": "./dist/js/dv-auto.umd.js",
      "default": "./dist/js/dv-auto.esm.js"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "http-server": "^14.1.1",
    "prettier": "^3.6.2",
    "rollup": "^4.53.2"
  },
  "scripts": {
    "ci": "npm run build && npm run check-format && npm run test",
    "build": "rollup -c",
    "test": "npx playwright test",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  }
}
